   <position>
      <x>100</x>
      <y>100</y>
      <docked>none</docked>             <!-- bottom left, bottom right, -->
                                        <!-- top left, top              -->

      <snap_distance>-1</snap_distance> <!-- in pixels, -1 to disable   -->
      <z_order>regular</z_order>        <!-- regular, on top, on bottom -->
   </position>

